<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.example.android.livingfruitswithtabs.MainActivity$PlaceholderFragment"
    android:fillViewport="true">

<android.support.constraint.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_photo_size"
        android:background="@drawable/order_cover"
        android:text="@string/order_cover_1"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/order_cover_text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-19dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="20sp"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/sign_in2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/order_cover_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/sign_in_text"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textSize="@dimen/size_quant_text_size"
        android:id="@+id/textView4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.27"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_text"
        app:layout_constraintRight_toLeftOf="@+id/guideline4" />

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:text="Quantity:"
        android:textSize="@dimen/size_quant_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:background="@drawable/icon_125g"
        android:gravity="center"
        android:text="125g"
        android:textColor="@color/colorWhite"
        android:id="@+id/icon_125"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$4 each"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/icon_125"
        app:layout_constraintRight_toRightOf="@+id/icon_125"
        app:layout_constraintTop_toBottomOf="@+id/icon_125"
        android:id="@+id/textView8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:layout_width="79dp"
        android:layout_height="55dp"
        android:text="0"
        android:inputType="number"
        android:id="@+id/editText_125"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/icon_125"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.551" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:background="@drawable/icon_400g"
        android:text="400g"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/icon_400"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintRight_toLeftOf="@+id/guideline4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12 each"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/icon_400"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/icon_400"
        android:id="@+id/textView10"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/icon_400"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/edit_text_600"
        android:layout_width="79dp"
        android:layout_height="55dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/icon_600"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/edit_text_400"
        android:layout_width="79dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="0"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/icon_400"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="67dp"
        android:text="600g"
        android:textColor="@color/colorWhite"
        android:background="@drawable/icon_600"
        android:gravity="center"
        android:id="@+id/icon_600"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintRight_toLeftOf="@+id/guideline4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$16 each"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="@+id/icon_600"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_600"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/icon_600"
        android:id="@+id/textView12" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: "
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:id="@+id/subtotal_text" />

    <TextView
        android:id="@+id/subtotal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/subtotal_text"
        tools:text="$25.00" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="265dp"
        android:layout_height="98dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_title"
        tools:layout_editor_absoluteY="501dp"
        android:gravity="left"
        tools:layout_editor_absoluteX="107dp">

        <RadioButton
            android:id="@+id/pickup_radio_button"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE pickup at our packhouse"
            android:textSize="@dimen/radio_button_font_size" />

        <RadioButton
            android:id="@+id/free_delivery_radio"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE delivery to Kerikeri CBD"
            android:textSize="@dimen/radio_button_font_size" />

        <RadioButton
            android:id="@+id/standard_delivery_radio"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard delivery, calculate below"
            android:textSize="@dimen/radio_button_font_size" />
    </RadioGroup>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your delivery method:"
        app:layout_constraintLeft_toLeftOf="@+id/radioGroup"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/subtotal_text"
        android:layout_marginLeft="0dp"
        android:id="@+id/radio_group_title" />

    <EditText
        android:layout_width="158dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:hint="Post Code"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:id="@+id/edit_text_post_code"
        app:layout_constraintRight_toLeftOf="@+id/calculate_button"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/radioGroup"
        android:inputType="number"/>

    <Button
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:background="@drawable/my_button"
        android:text="Calculate"
        app:layout_constraintTop_toTopOf="@+id/edit_text_post_code"
        android:layout_marginTop="0dp"
        android:id="@+id/calculate_button"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/radioGroup" />

    <Space
        android:layout_width="88dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_post_code"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_post_code"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>

</ScrollView>





